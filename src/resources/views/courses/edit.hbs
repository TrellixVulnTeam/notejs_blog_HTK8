<div class="mt-4">
    <h3>Sua khoa hoc</h3>
    <form method="post" action="/courses/{{course._id}}?_method=PUT" class="mt-4">
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="name" value="{{course.name}}">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <input type="text" class="form-control" id="description" name="description" value="{{course.description}}">
        </div>
        <div class="mb-3">
            <label for="videoId" class="form-label">videoId</label>
            <input type="text" class="form-control" id="videoId" name="videoId" value="{{course.videoId}}">
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary mb-3" >Edit</button>
        </div>
    </form>
</div>